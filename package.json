{
  "name": "dragonbane-bestiary",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "validate": "node scripts/validate.js",
    "serve": "live-server public",
    "watch": "onchange \"schemas/**/*\" \"creatures/**/*\" \"templates/**/*\" \"assets/**/*\" -- npm run build",
    "dev": "npm run build && concurrently \"npm run watch\" \"npm run serve\""
  },
  "dependencies": {
    "ajv": "^8.14.0",
    "glob": "^10.3.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "live-server": "^1.2.0",
    "onchange": "^7.1.0"
  }
}
