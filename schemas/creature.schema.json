{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dragonbane Creature",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["MONSTER", "NPC"]
    },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "morale": { "type": "integer" },
    "ferocity": { "type": "integer" },
    "size": { "type": "string", "enum": ["SMALL", "NORMAL", "LARGE", "HUGE", "SWARM"] },
    "move": { "type": "integer", "multipleOf": 2 },
    "hp": { "type": "integer" },
    "wp": { "type": "integer" },
    "armor": { "type": "integer" },
    "resistance": { "type": "string" },
    "immunity": { "type": "string" },
    "weakness": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "enum": [
              "Acrobatics",
              "Awareness",
              "Bartering",
              "Beast Lore",
              "Bluffing",
              "Bushcraft",
              "Crafting",
              "Evade",
              "Healing",
              "Hunting & Fishing",
              "Languages",
              "Myths & Legends",
              "Performance",
              "Persuasion",
              "Riding",
              "Seamanship",
              "Sleight of Hand",
              "Sneaking",
              "Spot Hidden",
              "Swimming",
              "Animism",
              "Mentalism",
              "Elementalism"
            ]
          },
          "level": { "type": "integer" }
        },
        "required": ["name", "level"],
        "additionalProperties": false
      }
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name", "description"],
        "additionalProperties": false
      }
    },
    "attacks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "result": { "type": "string" }
        },
        "required": ["name", "description", "result"],
        "additionalProperties": false
      }
    },
    "abilities": {
      "type": "array",
      "items": { "type": "string" }
    },
    "spells": {
      "type": "array",
      "items": { "type": "string" }
    },
    "weapons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "level": { "type": "integer" },
          "damage": { "type": "string" },
          "durability": { "type": "integer" }
        },
        "required": ["name", "level", "damage", "durability"],
        "additionalProperties": false
      }
    },
    "armors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "rating": { "type": "integer" }
        },
        "required": ["name", "rating"],
        "additionalProperties": false
      }
    },
    "damage_bonuses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "STR",
              "AGL"
            ]
          },
          "value": { "type": "integer" }
        },
        "required": ["type", "value"],
        "additionalProperties": false
      }
    }
  },
  "required": ["type", "name", "size", "move", "hp"],
  "additionalProperties": false,
  "allOf": [
    {
      "if": { "properties": { "type": { "const": "MONSTER" } }, "required": ["type"] },
      "then": {
        "required": ["attacks", "ferocity"],
        "properties": {
          "wp": false,
          "armor": { "type": "integer" },
          "resistance": { "type": "string" },
          "immunity": { "type": "string" },
          "weakness": { "type": "string" },
          "abilities": false,
          "spells": false,
          "weapons": false,
          "armors": false,
          "damage_bonuses": false
        }
      }
    },
    {
      "if": { "properties": { "type": { "const": "NPC" } }, "required": ["type"] },
      "then": {
        "properties": {
          "attacks": false,
          "armor": false,
          "ferocity": false
        }
      }
    }
  ]
}
